<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#767BA2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:padding="3dp"
            app:srcCompat="@drawable/logo2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Usuario"></TextView>

        <EditText
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="ContraseÃ±a"></TextView>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"></EditText>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:background="#5C95B9"
            android:text="Iniciar sesion"></Button>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="30dip"
            android:layout_marginRight="140px"
            android:gravity="center"
            android:text="No tienes cuenta?"
            android:textColor="#fff"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/Signup"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"
            android:layout_marginTop="-150px"
            android:layout_marginLeft="620px"
            android:text="SignUp"
            android:textColor="#081AF4"
            android:textSize="20dip" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>